<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="filter_switch"
        android:summary="Apply a filter for presence dropouts or use raw data as it was collected"
        android:title="Apply filter" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="2"
        android:inputType="numberDecimal"
        android:key="dropout_time"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Maximum place dropout time (minutes)" />


</PreferenceScreen>
